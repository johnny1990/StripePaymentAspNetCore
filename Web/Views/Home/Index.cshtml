@model IEnumerable<Models.TShirt>

@{
    ViewData["Title"] = "Index";
}
<div><h1>Available T-Shirts</h1></div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-xs-6" style="padding-bottom: 35px;">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@item.Description <small class="text-muted">(by: @item.Price) </small></h4><br />
                    <p class="card-text">@item.Description</p>
                    @Html.ActionLink("Show details", "Details", "Home", new { id = item.Id })
                    @Html.ActionLink("Purchase - $" +item.Price, "Purchase", "Checkout", new { id = item.Id }, new { @class = "btn btn-success pull-right" })
                </div>
            </div>
        </div>
    }
</div>
